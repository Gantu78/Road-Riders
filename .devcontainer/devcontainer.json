{
    "name": "CyclePulse Dev Environment",
    "build": {
      "dockerfile": "Dockerfile",
      "context": ".."
    },
    "forwardPorts": [5000, 3000, 5432],
    "postCreateCommand": "bash -c '/etc/init.d/postgresql start && sleep 5 && cd /workspaces/Road-Riders/backend && npm install && npm run dev & cd /workspaces/Road-Riders/frontend && npm install && npm start'",
    "customizations": {
      "vscode": {
        "extensions": [
          "dbaeumer.vscode-eslint",
          "esbenp.prettier-vscode",
          "ms-vscode.vscode-typescript-next",
          "chris-nada.postgresql",
          "formulahendry.auto-rename-tag",
          "formulahendry.auto-close-tag"
        ],
        "settings": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": null,
          "terminal.integrated.defaultProfile.linux": "bash"
        }
      }
    },
    "runArgs": ["--env-file", "backend/.env"],
    "mounts": [
      "source=cyclepulse-postgres-data,target=/var/lib/postgresql/14/main,type=volume"
    ]
  }